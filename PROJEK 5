#include <ESP32Servo.h>

#define TRIG_PIN 27
#define ECHO_PIN 33
#define SERVO_PIN 18

Servo servoMotor;

void setup() {
  pinMode(TRIG_PIN, OUTPUT);
  pinMode(ECHO_PIN, INPUT);

  servoMotor.attach(SERVO_PIN);
  servoMotor.write(90);   // 90 = BERHENTI (servo 360Â°)

  Serial.begin(9600);
}

void loop() {
  long duration;
  int jarak;

  // Hantar denyutan ultrasonik
  digitalWrite(TRIG_PIN, LOW);
  delayMicroseconds(2);
  digitalWrite(TRIG_PIN, HIGH);
  delayMicroseconds(10);
  digitalWrite(TRIG_PIN, LOW);

  // Terima pantulan
  duration = pulseIn(ECHO_PIN, HIGH, 30000);

  // Kira jarak (cm)
  jarak = duration * 0.034 / 2;

  Serial.print("Jarak: ");
  Serial.print(jarak);
  Serial.println(" cm");

  // KAWALAN SERVO
  if (jarak > 0 && jarak < 5) {
    servoMotor.write(60);   // Pusing satu arah
  } else {
    servoMotor.write(90);   // Berhenti
  }

  delay(200);
}
