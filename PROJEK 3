#define LDR_PIN 15
#define LED_HIJAU 19

int ambangCahaya = 500; // nilai ambang, boleh dilaras

void setup() {
  pinMode(LED_HIJAU, OUTPUT);
  Serial.begin(9600);
}

void loop() {
  int bacaanLDR = analogRead(LDR_PIN); // baca nilai 0 â€“ 1023
  Serial.print("Nilai LDR: ");
  Serial.println(bacaanLDR);

  // Jika cahaya cukup terang, LED hijau menyala
  if (bacaanLDR > ambangCahaya) {
    digitalWrite(LED_HIJAU, HIGH); 
  } else {
    digitalWrite(LED_HIJAU, LOW); 
  }

  delay(100);
}
