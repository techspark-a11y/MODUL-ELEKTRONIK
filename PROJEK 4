#define MQ2_PIN 35
#define LED_HIJAU 23
#define LED_MERAH 19

int ambangGas = 100; // Tetapkan ikut kepekaan gas

void setup() {
  pinMode(LED_HIJAU, OUTPUT);
  pinMode(LED_MERAH, OUTPUT);

  // Keadaan awal: sistem selamat, hijau menyala
  digitalWrite(LED_HIJAU, LOW);
  digitalWrite(LED_MERAH, HIGH);

  Serial.begin(9600);
}

void loop() {
  int bacaanGas = analogRead(MQ2_PIN);
  Serial.print("Bacaan MQ2: ");
  Serial.println(bacaanGas);

  // Jika gas berbahaya dikesan
  if (bacaanGas > ambangGas) {
    digitalWrite(LED_HIJAU, LOW);  // Hijau padam
    digitalWrite(LED_MERAH, HIGH); // Merah menyala
  } else {
    // Normal: Hijau menyala, merah padam
    digitalWrite(LED_HIJAU, HIGH);
    digitalWrite(LED_MERAH, LOW);
  }

  delay(100);
}
