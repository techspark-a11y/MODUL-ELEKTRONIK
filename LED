#define LED_PIN 13
#define BUTTON_PIN 2

void setup() {
  pinMode(LED_PIN, OUTPUT);
  pinMode(BUTTON_PIN, INPUT_PULLUP); // Butang menggunakan pull-up dalaman
}

void loop() {
  // Butang ditekan = LOW
  if (digitalRead(BUTTON_PIN) == LOW) {
    digitalWrite(LED_PIN, HIGH);  // LED menyala
  } else {
    digitalWrite(LED_PIN, LOW);   // LED padam
  }
}
